#!/bin/bash

# Ensure data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found. Run the fetch script first."
  exit 1
fi

# Extract fields using jq
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert units (PokéAPI: height in decimetres, weight in hectograms)
formatted_height=$(awk "BEGIN {print $height / 10}")
formatted_weight=$(awk "BEGIN {print $weight / 10}")

# Capitalize first letters
name=$(echo "$name" | sed 's/.*/\u&/')
type=$(echo "$type" | sed 's/.*/\u&/')

# ✅ Output in the exact required format
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
