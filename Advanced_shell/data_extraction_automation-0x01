#!/bin/bash

# Ensure data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found. Run the fetch script first."
  exit 1
fi

# Extract fields using jq
name=$(jq -r '.name' data.json)
height=$(jq -r '.height' data.json)
weight=$(jq -r '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json)

# Convert height and weight to readable units
# According to Pok√©API: height = decimetres, weight = hectograms
height_m=$(awk "BEGIN {print $height / 10}")
weight_kg=$(awk "BEGIN {print $weight / 10}")

# Format the output
echo "$(echo "$name" | sed 's/.*/\u&/') is of type $(echo "$type" | sed 's/.*/\u&/'), weighs ${weight_kg}kg, and is ${height_m}m tall."
