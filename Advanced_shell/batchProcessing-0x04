#!/bin/bash

# List of PokÃ©mon to fetch
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Base URL
API_URL="https://pokeapi.co/api/v2/pokemon"

# Error log file
ERROR_FILE="errors.txt"

# Clear old errors
> "$ERROR_FILE"

echo "âš¡ Starting parallel PokÃ©mon fetch..."

# Function to fetch a single PokÃ©mon
fetch_pokemon() {
  local name=$1
  local output_file="${name}.json"

  echo "ðŸ”Ž Fetching $name..."
  response_code=$(curl -s -w "%{http_code}" -o "$output_file" "${API_URL}/${name}")

  if [ "$response_code" -eq 200 ]; then
    echo "âœ… $name data saved to $output_file"
  else
    echo "âŒ Failed to fetch $name (HTTP $response_code)" >> "$ERROR_FILE"
    rm -f "$output_file"  # Remove incomplete file
  fi
}

# Launch all fetches in parallel
for pokemon in "${POKEMONS[@]}"; do
  fetch_pokemon "$pokemon" &
done


# Display running jobs
echo "ðŸ”„ Waiting for background jobs to complete..."
jobs

# Wait for all background processes to complete
wait

# Optionally kill any stuck background jobs (safety check)
kill $(jobs -p) 2>/dev/null

echo
echo "ðŸŽ¯ All parallel fetches complete!"
echo "Check '$ERROR_FILE' for any failed requests."
