#!/bin/bash

# Define API URL and output files
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" > status_code.txt

# Read the status code
STATUS_CODE=$(cat status_code.txt)
rm status_code.txt

# Check if the request was successful
if [ "$STATUS_CODE" -eq 200 ]; then
  echo "✅ Data for Pikachu saved successfully to $OUTPUT_FILE"
else
  echo "❌ Failed to retrieve data (HTTP status: $STATUS_CODE)" | tee -a "$ERROR_FILE"
fi
